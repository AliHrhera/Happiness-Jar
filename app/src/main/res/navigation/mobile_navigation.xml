<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/splashFragment"
        android:name="era.apps.happinessjar.ui.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_messagesFragment"
            app:destination="@id/messagesFragment" />
        <action
            android:id="@+id/action_splashFragment_to_allLikedMessagesFragment"
            app:destination="@id/allLikedMessagesFragment" />
        <action
            android:id="@+id/action_splashFragment_to_storiesFragment"
            app:destination="@id/storiesFragment" />
        <action
            android:id="@+id/action_splashFragment_to_whatsAppMessagesFragment"
            app:destination="@id/whatsAppMessagesFragment" />
    </fragment>
    <fragment
        android:id="@+id/messagesFragment"
        android:name="era.apps.happinessjar.ui.message.MessagesFragment"
        android:label="fragment_stories"
        tools:layout="@layout/fragment_stories" />
    <fragment
        android:id="@+id/allLikedMessagesFragment"
        android:name="era.apps.happinessjar.ui.message.AllLikedMessagesFragment"
        android:label="AllLikedMessagesFragment" />
    <fragment
        android:id="@+id/storiesFragment"
        android:name="era.apps.happinessjar.ui.stories.StoriesFragment"
        android:label="StoriesFragment" />
    <fragment
        android:id="@+id/whatsAppMessagesFragment"
        android:name="era.apps.happinessjar.ui.message.WhatsAppMessagesFragment"
        android:label="WhatsAppMessagesFragment" />
</navigation>